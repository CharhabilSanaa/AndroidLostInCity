<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:id="@+id/route_detailheader_linear_layout"
                  android:background="@drawable/route_appbar_background"
                  android:padding="@dimen/activity_horizontal_margin" android:layout_height="60dp">
        <ImageView
                android:id="@+id/btnDetailHeaderClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24px"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/route_txt_detail"
                android:textSize="@dimen/abc_text_size_large_material"
                android:textColor="@android:color/white"
                android:gravity="start|center_horizontal"
                android:text="Route Detail"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"/>
    </LinearLayout>

    <include layout="@layout/route_direction_list_item"/>

</LinearLayout>