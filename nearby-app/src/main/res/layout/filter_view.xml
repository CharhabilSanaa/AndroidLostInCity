<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_margin"
        android:paddingRight="@dimen/dialog_margin"
        android:paddingBottom="@dimen/dialog_margin"
        android:paddingTop="@dimen/dialog_margin"
    android:background="@color/beige">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filterView"
        android:background="@color/beige">

    </ListView>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="36dp"
                  android:orientation="horizontal" android:layout_gravity="right">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCancel"
            android:text="CANCEL"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnApply"
            android:text="APPLY"
            android:textColor="@color/white"
            android:background="@color/black"/>
    </LinearLayout>
</LinearLayout>
